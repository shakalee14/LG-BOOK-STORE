extends layout

block content
  .clearfix
  h1 Create New Book

  form.form-horizontal(method='post', action='/books')
    fieldset
      legend Create New Book
      .control-group
        label.control-label(for='title') Title
        .controls
          input#title.input-large(name='title', type='text', placeholder='')
      .control-group
        label.control-label Author
        .controls
          input#author-1.input-large(name='authors[]', type='text', placeholder='')
      .control-group
        label.control-label Author
        .controls
          input#author-2.input-large(name='authors[]', type='text', placeholder='')
      .control-group
        label.control-label Author
        .controls
          input#author-3.input-large(name='authors[]', type='text', placeholder='')
      .control-group
        label.control-label(for='Fiction/Nonfiction')
        .controls
          label.radio(for='fiction-0')
            input(type='radio', name='fiction', id='fiction-0', value='true', checked='checked')
            |       Fiction
          label.radio(for='fiction-1')
            input(type='radio', name='fiction', id='fiction-1', value='false')
            |       Non-Fiction
      .control-group
        label.control-label(for='genres') Genres
        .controls
          select#Genres.input-large(name='genres[]', multiple='multiple')
            each genre in genres
              option(value=genre.id)= genre.name

        div
          input.form-control(type='submit' value="Create Book")
